<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        .table-container{
            padding: 15px 20px;
        }
        .title{
            font-size: 30px;
            font-weight: bold;
        }
        table {
          border-collapse: collapse;
          width: 100%;
        }
        
        th, td {
          padding: 8px;
          text-align: left;
          border-bottom: 1px solid #ccc;
        }
        
        tr:hover {background-color: #ccc;}
        </style>
</head>
<body>
    <div class="topnav">
        <a class="active" href="/">Home</a>
        <a href="/create">Create User</a>
        <a href="#contact">Contact</a>
        <a href="#about">About</a>
    </div>
    
    <div class="table-container">
    
        <div class="title">List Users</div>
        
        <table>      
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Name</th>
                <th>City</th>
                <th>Action</th>
            </tr>      
            <% for (var i = 0; i < listUsers.length; i++) { %>
                <tr>
                    <td><%= listUsers[i].id%></td>
                    <td><%= listUsers[i].email%></td>
                    <td><%= listUsers[i].name%></td>
                    <td><%= listUsers[i].city%></td>
                    <td>
                        <a href="/update/<%= listUsers[i].id%>">Edit</a>
                        <form action="/delete-user/<%= listUsers[i].id%>" method="POST">
                            <button>Delete</button>                            
                        </form>
                    </td>
                </tr>
                <% } %>

        </table>
    </div>    
</body>
</html>